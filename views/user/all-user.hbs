
{{>admin-header}}
<section>
  <div class="container mt-5">
  <div class="row">
    <a href="/admin/add-user"><button class="btn btn-success float-end me-5 mb-5">Create</button></a>
    <table class="table mt-5 display" id="alluser">
  <thead>
    <tr>
      <th scope="col">no</th>
      <th scope="col">first name</th>
      <th scope="col">last name</th>
      <th scope="col">email</th>
      <th scope="col">option</th>
    </tr>
  </thead>
  <tbody>
 {{#each users}}
    <tr>
      <th scope="row">{{inc @index}}</th>
      <td>{{this.firstname}}</td>
      <td>{{this.lastname}}</td>
      <td>{{this.email}}</td>
      <td>
        <a href="/admin/edit-user/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-user/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you sure you want to delete')" >Delete</a>
      </td>
    </tr>
  {{/each}}
    <tbody>
    </table>
  </div>
  </div>
</section>
 
 <script>
   $(document).ready( function () {
    $('#alluser').DataTable();
} );
 </script>

